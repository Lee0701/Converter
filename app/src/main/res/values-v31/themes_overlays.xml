<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Converter.Keyboard.Overlay" parent="ThemeOverlay.Material3.DynamicColors.Light">
        <item name="background">@android:color/system_neutral1_50</item>
    </style>

    <style name="Theme.Converter.Keyboard.Key.Overlay" parent="ThemeOverlay.Material3.DynamicColors.Light">
        <item name="android:textSize">@dimen/key_text_size</item>
        <item name="android:textColor">@android:color/system_accent1_800</item>
        <item name="iconTint">@android:color/system_accent1_800</item>
        <item name="marginHorizontal">@dimen/key_margin_horizontal</item>
        <item name="marginVertical">@dimen/key_margin_vertical</item>
        <item name="background">@drawable/key_bg</item>
        <item name="backgroundTint">@color/key_bg_dynamic_light</item>
    </style>

    <style name="Theme.Converter.Keyboard.Key.Mod.Overlay" parent="Theme.Converter.Keyboard.Key.Overlay">
        <item name="backgroundTint">@color/key_bg_dynamic_light_mod</item>
    </style>

    <style name="Theme.Converter.Keyboard.Key.Return.Overlay" parent="Theme.Converter.Keyboard.Key.Overlay">
        <item name="backgroundTint">@color/key_bg_dynamic_light_return</item>
        <item name="iconTint">@android:color/system_accent2_800</item>
    </style>

    <style name="Theme.Converter.Keyboard.KeyPopup.Overlay">
        <item name="android:textSize">@dimen/key_popup_text_size</item>
        <item name="android:textColor">@android:color/system_accent2_0</item>
        <item name="background">@drawable/key_popup_bg</item>
        <item name="backgroundTint">@android:color/system_accent2_0</item>
        <item name="iconTint">@android:color/system_accent2_0</item>
    </style>

</resources>