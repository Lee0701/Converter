<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Converter" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_100</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="actionBarStyle">@style/Theme.Converter.ActionBar</item>
    </style>

    <style name="Theme.Converter.NoActionBar" parent="Theme.Converter">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Converter.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>